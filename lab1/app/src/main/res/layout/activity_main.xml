<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/olx"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Войдите через Facebook"
        android:background="#3b5998"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/facebook"
        android:paddingLeft="30dp"
        android:textAllCaps="false"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:text="Войти с email-адресом"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/post"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Выбрать другой способ входа"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Входя в систему, вы соглашаетесь с правилами сервиса"
        android:layout_marginTop="200dp"
        />

</LinearLayout>
